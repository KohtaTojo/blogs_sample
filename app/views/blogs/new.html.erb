<% if @blog.errors.any? %>
  <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
  <ul>
    <% @blog.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
<% end %>
<h1> Write blog</h1>
<%= form_with(model: @blog, local: true, url: confirm_blogs_path) do |f| %>
  <%= f.label :content, "内容" %>
  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>
